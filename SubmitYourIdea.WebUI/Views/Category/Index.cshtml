@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<CategoryResponse>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-light rounded shadow-sm">
        <h3 class="text-primary fw-bold">Category List</h3>
        <a asp-controller="Category" asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i> Add Category
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive" style="overflow: visible !important;">
            <table class="table table-hover table-striped border rounded">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                        {
                            <tr>
                                <td class="align-middle text-center">@category.Id</td>
                                <td class="align-middle">@category.Name</td>
                                <td class="align-middle text-center">
                                    <div class="dropdown">
                                        <button class="btn btn-outline-success dropdown-toggle"
                                                type="button"
                                                data-bs-toggle="dropdown"
                                                aria-expanded="false"
                                                aria-label="Actions for category @category.Id">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a asp-action="Update" asp-route-id="@category.Id" class="dropdown-item">View or Edit</a>
                                            </li>
                                            <li>
                                                <form asp-action="Delete" asp-route-id="@category.Id" method="post" style="display:inline;"
                                                      onsubmit="return confirm('Are you sure you want to delete this category?');">
                                                    <button type="submit" class="dropdown-item text-danger">Delete</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>